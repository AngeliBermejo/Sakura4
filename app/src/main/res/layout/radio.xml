<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="radio">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text"
                android:textSize="35dp"
                android:id="@+id/send_label"
                android:layout_alignParentTop="true"
                android:textColor="#040404"
                android:layout_centerHorizontal="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flood"
                android:id="@+id/radioFlood"
                android:checked="false"
                android:textSize="25dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/radioLandslide"
                android:layout_toStartOf="@+id/radioLandslide"
                android:layout_marginRight="97dp"
                android:layout_marginEnd="97dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire"
                android:id="@+id/radioFire"
                android:layout_below="@+id/radioFlood"
                android:layout_alignLeft="@+id/radioFlood"
                android:layout_alignStart="@+id/radioFlood"
                android:checked="false"
                android:textSize="25dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landslide"
                android:id="@+id/radioLandslide"
                android:layout_gravity="center_horizontal"
                android:checked="false"
                android:textSize="25dp"
                android:layout_alignTop="@+id/radioFlood"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="110dp"
                android:layout_marginEnd="110dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Person Trapped"
                android:id="@+id/radioPerson"
                android:layout_below="@+id/radioLandslide"
                android:layout_alignLeft="@+id/radioLandslide"
                android:layout_alignStart="@+id/radioLandslide"
                android:checked="false"
                android:textSize="25dp" />

        </RelativeLayout>
